<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo_hawai4" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            android:id="@+id/editRegUsername"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/editRegEmail"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="No. HP" />

        <EditText
            android:id="@+id/editRegPhone"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/editRegPassword"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password" />

        <EditText
            android:id="@+id/editRegConfirmPassword"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/btnRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:textSize="7pt" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="bottom|center_horizontal"/>

</LinearLayout>