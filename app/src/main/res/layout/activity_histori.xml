<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo_hawai4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nThe Wildest Waterpark in Indonesia\n" />

    <TextView
        android:id="@+id/textHistoriNoTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak ada riwayat pemesanan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daftarHistoriTiketRV"
        android:layout_width="340dp"
        android:layout_height="350dp">

    </androidx.recyclerview.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/frameHistori"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp" />

</LinearLayout>